<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rodrigojosuetec.garage_finder.AgregaAutoActivity">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backicon" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/autoicon" />

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="338dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/txtMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Marca"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtModelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtMarca"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Modelo"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/spiEstilo"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_alignRight="@id/txtModelo"/>

        <TextView
            android:id="@+id/txtEstilo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spiEstilo"
            android:layout_alignParentEnd="true"
            android:text="Estilo"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtCombustible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spiEstilo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="Combustible"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/spiCombustible"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtCombustible"
            android:layout_centerHorizontal="true"
            android:layout_alignRight="@id/txtCombustible"/>

        <Button
            android:id="@+id/BtnAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:text="Agregar"
            android:textSize="24sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
