<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rodrigojosuetec.garage_finder.RegisterActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/ReNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/ReCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ReNombre"
            android:ems="10"
            android:hint="Correo"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/RePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ReCorreo"
            android:ems="10"
            android:hint="ContraseÃ±a"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/ReTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/RePassword"
            android:ems="10"
            android:hint="Telefono"
            android:inputType="phone"
            android:textAlignment="center"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/ReCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Cliente"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/ReAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ReCliente"
            android:layout_marginTop="14dp"
            android:text="Administrador"
            android:textSize="24sp" />

        <Button
            android:id="@+id/RegistrarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27dp"
            android:text="Registrar"
            android:textSize="30sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>